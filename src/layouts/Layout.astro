---
import "@/styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Hamburger from "@/components/react/Hamburger";
import DeskMenu from "@/components/DeskMenu.astro";
import Footer from "@/components/Footer.astro";
import { Icon } from "astro-icon/components";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main
      class="container min-h-screen px-2 flex flex-col gap-10 overflow-hidden mx-auto relative"
    >
      
      <DeskMenu />
      <slot />
      <Hamburger client:idle />
    </main>
    <Footer />
  </body>
</html>
