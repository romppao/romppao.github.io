---
import "@/styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Hamburger from "@/components/react/Hamburger";
import DeskMenu from "@/components/DeskMenu.astro";
import Footer from "@/components/Footer.astro";
import { Icon } from "astro-icon/components";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main
      class="container min-h-screen px-2 flex flex-col gap-10 overflow-hidden mx-auto relative"
    >
      <header class="flex justify-between items-center py-4">
        <a href="/" style="font-size:3em;font-weight:900;text-decoration:none;color:#000;">ROMPPAO</a>
        <DeskMenu />
      </header>
      <slot />
      <Footer />
      <Hamburger client:idle />
    </main>
  </body>
</html>
