---
import type { Post } from "@/consts";
interface Props {
  post: any;
}
const { post } = Astro.props;
const hero = post?.data?.heroImage as string;
const basePath = hero || '';
const widths = [640, 768, 1024, 1280, 1536];
const quality = 60;
const srcset = basePath
  ? widths.map((w) => `${basePath}?nf_resize=fit&w=${w}&q=${quality} ${w}w`).join(', ')
  : '';
const sizes = "100vw";
var margin = "";
if (post.id === "img2") {
  margin = "!mt-0";
}
import FormattedDate from "@/components/FormattedDate.astro";
const description = post.data.description;
const words = description.split(' ');
let formattedDescription = '';
if (words.length > 2) {
  formattedDescription = `${words[0]} ${words[1]}
${words.slice(2).join(' ')}`;
} else {
  formattedDescription = description; // Si tiene 2 palabras o menos, no modificamos
}
---
<a href={`/blog/${post.id}/`}
  class="flex flex-grow h-[100vh] w-full text-white object-cover relative py-10"
>
