---
const today = new Date().toLocaleDateString("en-us", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
import Button from "./Button.astro";
import { getCollection } from "astro:content";
const blogEntries = await getCollection("blog");
const collectionEntries = await getCollection("collection");
// Dividimos el blog en dos columnas para ocupar 2 listas
const midPoint = Math.ceil(blogEntries.length / 2);
const blogCol1: any = blogEntries.slice(0, midPoint);
const blogCol2 = blogEntries.slice(midPoint);
// Helper para derivar slug desde id (remueve directorio y extensión)
const toSlugFromId = (id: string) =>
  id.replace(/^.*\//, "").replace(/\.(md|mdx)$/i, "");
---

<footer class="relative bg-muted pt-10 w-full md:pb-6 border-t flex flex-col gap-8 z-10 max-w-full overflow-hidden">
  <div class="container px-5 mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="md:w-1/2 flex flex-col items-start gap-6 col-span-1">
      <p class="text-3xl font-semibold font-fugaz">
        PONTE EN CONTACTO CONMIGO
      </p>
      <Button href="/contact" text="Let's Chat" />
    </div>
    <div class="md:w-1/2 flex flex-col justify-between md:pr-20 col-span-1">
      <p class="text-xl font-semibold font-fugaz mb-3">
        LA VIDA A TRAVÉS DE UNA CÁMARA
      </p>
      <ul class="flex flex-wrap gap-2 md:gap-4 mb-4">
        {
          collectionEntries.map((collection: any) => (
            <li class="link link-underline link-underline-black text-black pb-1">
              <a
                class="font-fugaz text-lg md:text-xl"
                href={`/collection/${toSlugFromId(collection.id)}`}
              >
                {collection.data.title}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="flex gap-4 items-center">
        <a href="https://facebook.com">
          <svg
            class="size-8 md:size-12 fill-black hover:fill-primary transition duration-150 ease-out hover:ease-in"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M13.397 20.997v-8.196h2.765l.411-3.209h-3.176V7.548c0-.926.258-1.56 1.587-1.56h1.684V3.127A22.336 22.336 0 0 0 14.201 3c-2.444 0-4.122 1.492-4.122 4.231v2.355H7.332v3.209h2.753v8.202h3.312z"
            ></path>
          </svg>
        </a>
        <a href="https://instagram.com">
          <svg
            class="size-8 md:size-12 fill-black hover:fill-primary transition duration-150 ease-out hover:ease-in"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M11.999 7.377a4.623 4.623 0 1 0 0 9.248 4.623 4.623 0 0 0 0-9.248zm0 7.627a3.004 3.004 0 1 1 0-6.008 3.004 3.004 0 0 1 0 6.008z"
            ></path>
            <circle cx="16.806" cy="7.207" r="1.078"></circle>
            <path
              d="M20.533 6.111A4.605 4.605 0 0 0 17.9 3.479a6.606 6.606 0 0 0-2.186-.42c-.963-.042-1.268-.054-3.71-.054s-2.755 0-3.71.054a6.554 6.554 0 0 0-2.184.42 4.6 4.6 0 0 0-2.633 2.632 6.585 6.585 0 0 0-.419 2.186c-.043.962-.056 1.267-.056 3.71 0 2.442 0 2.753.056 3.71.015.748.156 1.486.419 2.187a4.61 4.61 0 0 0 2.634 2.632 6.584 6.584 0 0 0 2.185.45c.963.042 1.268.055 3.71.055s2.755 0 3.71-.055a6.615 6.615 0 0 0 2.186-.419 4.613 4.613 0 0 0 2.633-2.633c.263-.7.404-1.438.419-2.186.043-.962.056-1.267.056-3.71s0-2.753-.056-3.71a6.581 6.581 0 0 0-.421-2.217zm-1.218 9.532a5.043 5.043 0 0 1-.311 1.688 2.987 2.987 0 0 1-1.712 1.711 4.985 4.985 0 0 1-1.67.311c-.95.044-1.218.055-3.654.055-2.438 0-2.687 0-3.655-.055a4.96 4.96 0 0 1-1.669-.311 2.985 2.985 0 0 1-1.719-1.711 5.08 5.08 0 0 1-.311-1.669c-.043-.95-.053-1.218-.053-3.654 0-2.437 0-2.686.053-3.655a5.038 5.038 0 0 1 .311-1.687c.305-.789.93-1.41 1.719-1.712a5.01 5.01 0 0 1 1.669-.311c.951-.043 1.218-.055 3.655-.055s2.687 0 3.654.055a5.06 5.06 0 0 1 1.67.311 2.991 2.991 0 0 1 1.712 1.712 5.08 5.08 0 0 1 .311 1.669c.043.951.054 1.218.054 3.655 0 2.436 0 2.698-.043 3.654h-.011z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="w-full border-t border-black flex flex-col md:flex-row md:px-32 px-5 py-6 gap-6">
    <div class="md:w-1/2 flex flex-col gap-6">
      <ul class="flex gap-4">
        <li>
          <a href="/blog">
            <p class="link link-underline link-underline-black text-black pb-1">
              Blog
            </p>
          </a>
        </li>
        <li>
          <a href="/about">
            <p class="link link-underline link-underline-black text-black pb-1">
              About
            </p>
          </a>
        </li>
      </ul>
      
      <div class="flex flex-col gap-4">
        <p class="text-sm font-semibold text-gray-600">Entradas del Blog:</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-2">
          <ul class="flex flex-col gap-2">
            {blogCol1.map((entry: any) => (
              <li class="text-sm">
                <a 
                  href={`/blog/${toSlugFromId(entry.id)}`}
                  class="link link-underline link-underline-black text-black pb-1"
                >
                  {entry.data.title}
                </a>
              </li>
            ))}
          </ul>
          <ul class="flex flex-col gap-2">
            {blogCol2.map((entry: any) => (
              <li class="text-sm">
                <a 
                  href={`/blog/${toSlugFromId(entry.id)}`}
                  class="link link-underline link-underline-black text-black pb-1"
                >
                  {entry.data.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <div class="flex flex-col gap-4">
        <p class="text-sm font-semibold text-gray-600">Créditos de Fotos - Colección:</p>
        <ul class="flex flex-col gap-2">
          {collectionEntries.map((collection: any) => (
            <li class="text-xs text-gray-600">
              <a 
                href={`/collection/${toSlugFromId(collection.id)}`}
                class="hover:underline"
              >
                {collection.data.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="md:w-1/2 flex flex-col md:justify-end md:items-end">
      <p class="text-sm text-gray-600">
        {today} © Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
